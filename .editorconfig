root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.{md,txt}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# https://github.com/rust-lang/rust/blob/master/.editorconfig
[*.rs]
indent_size = 4

[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = false
